<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!--通知栏-->
        <item name="colorPrimaryDark">@color/theme</item>
        <!--窗体颜色-->
        <item name="android:windowBackground">@color/windowbg</item>
        <!--状态栏颜色-->
        <item name="colorPrimary">@color/theme</item>
        <!--底部颜色-->
        <item name="android:navigationBarColor">@color/theme</item>
    </style>

    <style name="SplashActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/love</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/list</item>
    </style>
